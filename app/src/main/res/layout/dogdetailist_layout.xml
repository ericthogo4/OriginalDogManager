<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"
        />
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dogname"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="13dp"

        android:id="@+id/name_dogdetails"/>
    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="10sp"
        android:background="@color/light_blue"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="weight"
        android:layout_gravity="center"
        android:gravity="center_horizontal"

        android:textSize="13dp"
        android:id="@+id/weight_dogdetails"/>
    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="10sp"
        android:background="@color/light_blue"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gender"
        android:layout_gravity="center"
        android:gravity="center_horizontal"

        android:textSize="13dp"
        android:id="@+id/gender_dogdetails"/>
    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="10sp"
        android:background="@color/light_blue"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breed:"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="breed"
        android:layout_gravity="center"
        android:gravity="center_horizontal"

        android:textSize="13dp"
        android:id="@+id/breed_dogdetails"/>
    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="10sp"
        android:background="@color/light_blue"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habits:"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="habits"
        android:layout_gravity="center"
        android:gravity="center_horizontal"

        android:textSize="13dp"
        android:id="@+id/habits_dogdetails"/>
    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="10sp"
        android:background="@color/light_blue"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18dp"/>
    <TextView
        android:textColor="@color/white"
        android:background="@color/green_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="age"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textSize="13dp"
        android:id="@+id/age_dogdetails"/>



</LinearLayout>
